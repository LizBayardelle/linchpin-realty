<%= simple_form_for(@value) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-group col-sm-6 col-md-5">
      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control" %>
    </div> <!-- col form-group -->
    <div class="form-group col-sm-6 col-md-5">
      <%= f.label "City, State, Zip Code" %>
      <%= f.text_field :citystatezip, class: "form-control" %>
    </div> <!-- col form-group -->
    <div class="form-group col-xs-12 col-md-2">
      <%= f.label "Sale Timeframe" %>
      <%= f.select :sell_timeframe, [["ASAP", "ASAP"], ["1 to 3 Months", "1 to 3 Months"], ["4 to 6 Months", "4 to 6 Months"], ["Over 6 Months", "Over 6 Months"]], class: "form-control" %>
    </div> <!-- col form-group -->
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit %>
  </div>
<% end %>
