<!-- page-specific content -->
  <% title @blog.title %>
  <%= content_for :head do %>
    <meta name="description" content="<%= @blog.teaser %>" />
    <meta property="og:url" content="<%= polymorphic_url(@blog) %>" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="<%= @blog.title %>" />
    <meta property="og:description" content="<%= @blog.teaser %>" />
    <meta property="og:image" content="<%= rails_blob_url(@blog.image) if @blog.image.attached? %>" />
    <meta property="article:published_time" content="<%= @blog.updated_at.strftime('%FT%T') %>" />
    <meta property="article:author" content="<%= @blog.user.first_name %> <%= @blog.user.last_name %>" />
  <% end %>
  <!-- page-specific content -->

  <!-- Event snippet for Download Blog PDF conversion page -->
  <script>
    function gtag_report_conversion(url) {
      var callback = function () {
        if (typeof(url) != 'undefined') {
          window.location = url;
        }
      };
      gtag('event', 'conversion', {
          'send_to': 'AW-803011261/H0l_CPKTioQBEL318_4C',
          'event_callback': callback
      });
      return false;
    }
  </script>
<!-- end page specific content -->







<!-- Main layout -->
<main>

  <div class="view jarallax" style="height: 60vh;">
    <img class="jarallax-img" src="<%= rails_blob_url(@blog.image) if @blog.image.attached? %>" alt="<%= @blog.title %>">
    <div class="mask rgba-stylish-light">
      <div class="container flex-center text-center">
        <div class="row mt-5">
          <div class="col-md-12 wow fadeIn mb-3">
            <h1 class="display-3 mb-2 wow fadeInDown color-white" data-wow-delay="0.3s"><%= @blog.title %></h1>
            <% if @blog.pillars_id && @pillar.name != " " %>
              <h4 class="text-white"> In <%= @pillar.name %>, by <%= @blog.user.first_name %> <%= @blog.user.last_name %></h4>
            <% end %>
            <% if current_user && current_user.admin %>
              <%= link_to 'Edit Blog', edit_blog_path(@blog), class: "btn btn-primary btn-lg wow fadeIn" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>



  <div class="container">
    <div class="row my-4">
      <div class="col-md-12 text-center">
        <h3 class="font-weight-bold color-blue-dark pb-2">
          <%= @blog.teaser %>
        </h3>
        <div class="text-center" onclick="ga('send',{'hitType': 'event','eventCategory': 'share', 'eventAction': 'Blogs Social Share'})">
          <!-- sharing links -->
          <div class="fb-share-button"
            data-href="<%= polymorphic_url(@blog) %>"
            data-layout="button_count">
          </div>
          <a href="https://www.pinterest.com/pin/create/button/" data-pin-do="buttonBookmark"></a>
        <!-- end sharing links -->
        </div>
      </div> <!--Grid column-->
    </div> <!--Grid row-->
  </div> <!-- container-->




  <% if current_user %>
    <% if @blog.optin %>
      <div class="view jarallax" style="min-height: 200px; height: auto">
        <img class="jarallax-img" src="<%= asset_path("background.jpg") %>" alt="Linchpin Realty Blog" >
        <div class="mask rgba-stylish-slight">
          <div class="container flex-center text-center">
            <div class="row pt-3">
              <div class="col-12">
                <h2 class="font-weight-bold">Want to Cut to the Chase?</h2>
              </div>
              <div class="col-12">
                <h3>Get Your <%= @blog.link_text %> Now</h3>
                <%= link_to "Let's Go", @blog.link_filename, class: "btn btn-outline-white", target: "_blank", onclick: "ga('send',{'hitType': 'event','eventCategory': 'downloads', 'eventAction': 'Member Download Blog PDF'}); gtag_report_conversion();" %>
              </div>
            </div> <!-- row -->
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <% if @blog.optin %>
      <div class="view jarallax" style="min-height: 400px; height: auto">
        <img class="jarallax-img" src="<%= asset_path("background.jpg") %>" alt="Linchpin Realty Blog" >
        <div class="mask rgba-stylish-slight">
          <div class="container flex-center text-center">
            <div class="row pt-3">
              <div class="col-12">
                <h2 class="font-weight-bold">Want to Cut to the Chase?</h2>
              </div>
              <div class="col-12">
                <h3>Get Your <%= @blog.link_text %> Now</h3>
                <%= render partial: "layouts/new_subscriber_wide", locals: { tags: @blog.optin_tags } %>
              </div>
            </div> <!-- row -->
          </div>
        </div>
      </div>
    <% end %>
  <% end %>


  <div id="blogs" class="container my-5">
    <%= @blog.body.html_safe %>
  </div> <!-- container -->





  <div class="view jarallax" style="min-height: 300px; height: auto">
    <img class="jarallax-img" src="<%= asset_path("background.jpg") %>" alt="Linchpin Realty Blog" >
    <div class="mask rgba-stylish-strong">
      <div class="container flex-center text-center">
        <div class="row pt-3">
          <div class="col-12">
            <h2 class="font-weight-bold text-white">Subscribe</h2>
          </div>
          <div class="col-12">
            <%= render partial: "subscribers/mini_form", locals: { subscriber: @new_subscriber, tag_string: "blog-show-subscribe" } %>
          </div>
        </div> <!-- row -->
      </div>
    </div>
  </div>



  <div class="container py-5">
    <% if @blog.optin %>
      <div class="text-center">
        <h2 class="font-weight-bold">Want More Information?</h2>
        <% if current_user %>
          <h3>Get Your <%= @blog.link_text %> Now</h3>
          <%= link_to "Let's Go", @blog.link_filename, target: "_blank", onclick: "ga('send',{'hitType': 'event','eventCategory': 'downloads', 'eventAction': 'Member Download Blog PDF'}); gtag_report_conversion();" %>
        <% else %>
          <div class="">
            <h3 class="text-center">Get Your <%= @blog.link_text %> Now</h3>
            <%= render partial: "layouts/new_subscriber_wide", locals: { tags: @blog.optin_tags } %>
          </div> <!-- card -->
        <% end %>
      </div> <!-- header row -->
    <% end %>
  </div> <!-- container -->





  <div class="blue-stripe">
    <!-- sharing links -->
    <div class="container text-center">
      <h2 class="font-weight-bold">Care to Share?</h2>
      <div class="fb-share-button"
        data-href="<%= polymorphic_url(@blog) %>"
        data-layout="button_count">
      </div>
      <a href="https://www.pinterest.com/pin/create/button/" data-pin-do="buttonBookmark"></a>


      <% if @blog.pins.attached? %>
        <div class="pinterest-image row padded pin-image-stripe my-4">
          <div class="container">
            <% @blog.pins.each do |image| %>
              <%= image_tag url_for(image)%>
            <% end %>
          </div>
        </div>
      <% end %>
    </div> <!-- text center container -->
  </div> <!-- blue stripe -->





  <div class="container py-5">
    <div class="comments">
      <div id="disqus_thread"></div>
      <script>

      var disqus_config = function () {
        this.page.url = "<%= polymorphic_url(@blog) %>";  // Replace PAGE_URL with your page's canonical URL variable
        this.page.identifier = "<%= @blog.id %>"; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
      };

      (function() { // DON'T EDIT BELOW THIS LINE
      var d = document, s = d.createElement('script');
      s.src = 'https://linchpin-realty.disqus.com/embed.js';
      s.setAttribute('data-timestamp', +new Date());
      (d.head || d.body).appendChild(s);
      })();
      </script>
      <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </div> <!-- comments -->

  </div> <!-- container -->








    <% if @related.any? && @blog.pillars_id && @pillar.name != " " %>
      <div class="row blue-stripe my-5">
        <div class="container">
          <h2 class="text-center">Other Blogs about <%= @pillar.name %></h2>
          <% @related.each do |blog| %>
            <%= link_to blog_path(blog) do %>
              <div class="card blog-card col-xs-6 col-md-3">
                  <%= image_tag url_for(blog.image), alt: blog.title if blog.image.attached? %>
                  <h3><%= blog.title %></h3>
                  <p><%= blog.teaser %></p>
                  <p><em><%= link_to "Read More", blog_path(blog) %>...</em></p>
              </div> <!-- card -->
            <% end %> <!-- link -->
          <% end %> <!-- blogs each -->
        </div> <!-- container -->
      </div> <!-- row -->
    <% end %>





</main> <!-- Main layout -->





<script>
  $(document).ready(function() {
    // object-fit polyfill run
    objectFitImages();
    /* init Jarallax */
    jarallax(document.querySelectorAll('.jarallax'));
    jarallax(document.querySelectorAll('.jarallax-keep-img'), {
        keepImg: true,
    });
  });
</script>
