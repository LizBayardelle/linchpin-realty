<div class="view jarallax" style="height: 100vh; overflow: scroll">
	<img class="jarallax-img" src="<%= asset_path("houses-road.jpg") %>" alt="Log In Page">
	<div class="mask rgba-blue-slight">
		<div class="container flex-center">
			<div class="card px-5 py-3">

				<h1 class="text-center pt-3">Create an Account</h1>
				<p class="text-center"><%= link_to('Already have an account?', new_user_session_path)  %></p>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <%= devise_error_messages! %>

					<div class="form-inputs">
						<div class="form-row row justify-content-center">
							<%= f.invisible_captcha :subtitle %>
							<div class="form-group my-1 my-sm-3 md-form col-sm-6 col-12">
									<%= f.label :first_name %>
									<%= f.text_field :first_name, class: "form-control", required: true %>
							</div>
							<div class="form-group my-1 my-sm-3 md-form col-sm-6 col-12">
									<%= f.label :last_name %>
									<%= f.text_field :last_name, class: "form-control", required: true %>
							</div>
							<div class="form-group my-1 my-sm-3 md-form col-sm-6 col-12">
									<%= f.label :email %>
									<%= f.text_field :email, required: true, autofocus: true, class: "form-control" %>
									<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
											<p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
									<% end %>
							</div>
							<div class="form-group my-1 my-sm-3 md-form col-sm-6 col-xs-12">
									<%= f.label :phone %>
									<%= f.text_field :phone, required: true, class: "form-control" %>
							</div> <!-- row -->
						</div> <!-- form-inputs -->




						<div class="form-row row">
							<div class="form-group my-1 my-sm-3 md-form col-sm-6">
									<%= f.label :password %>
									<%= f.password_field :password, class: "form-control", required: true %>
							</div>
							<div class="form-group my-1 my-sm-3 md-form col-sm-6">
									<%= f.label :confirm_password %>
									<%= f.password_field :confirm_password, class: "form-control", required: true %>
							</div>
						</div> <!-- row -->


						<hr>


						<div class="row">
								<div class="col-sm-6 mb-3">
									<div class="field form-check">
										<%= f.check_box :current_client, class: "form-check-input", id: "buyer" %>
										<%= f.label "I'm a current Linchpin Realty client.", class: "form-check-label", for: "buyer" %>
									</div>
									<div class="field form-check">
										<%= f.check_box :buyer, class: "form-check-input", id: "buyer" %>
										<%= f.label "I want to buy a home.", class: "form-check-label", for: "buyer" %>
									</div>
									<div class="field form-check">
										<%= f.check_box :seller, class: "form-check-input", id: "seller" %>
										<%= f.label "I want to sell my house.", class: "form-check-label", for: "seller" %>
									</div>
								</div>
								<div class="col-sm-6 mb-3">
									<div class="field form-check">
										<%= f.check_box :blog_emails, class: "form-check-input", id: "blog_emails" %>
										<%= f.label "Please email me real estate tips.", class: "form-check-label", for: "blog_emails" %>
									</div>
								</div>
						</div> <!-- row -->


						<hr>

				  </div> <!-- form inputs -->

				  <div class="form-actions text-center">
						<%= f.button :submit, "Sign up", class: "btn btn-primary", onclick: "ga('send',{'hitType': 'event','eventCategory': 'join', 'eventAction': 'Create Account Submission'})" %><br />
				    <%= render "devise/shared/links" %>
				  </div> <!-- form actions -->
				<% end %>

			</div> <!-- card -->
		</div> <!-- container -->
	</div>
</div>












<script>
  $(document).ready(function() {
    // object-fit polyfill run
    objectFitImages();
    /* init Jarallax */
    jarallax(document.querySelectorAll('.jarallax'));
    jarallax(document.querySelectorAll('.jarallax-keep-img'), {
        keepImg: true,
    });
  });
</script>
