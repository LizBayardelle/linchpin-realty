<div class="responsive-hero-div">
    <%= image_tag "house_pool.jpg", class: "responsive-hero-img", alt: "Beautiful backyard, pool, and house." %>

    <div class="overlap-responsive-image text-center">
      <div class="gradient-overlay slideRight">
        <h1>Get your custom listings report!</h1>
        <div class="text-center" style="width: 100%">
          <h3 class="font-sans">Answer four quick questions to tell us what to include in your report.</h3>
        </div> <!-- container -->
      </div> <!-- absolute-bottom-transparent -->
    </div> <!-- overlap-image -->
</div>


<div class="container text-center">

  <div class="row">
    <div class="progress-bar-item active">
      <h1>1</h1>
      <p>House Type</p>
    </div>
    <div class="progress-bar-item">
      <h1>2</h1>
      <p>House Details</p>
    </div>
    <div class="progress-bar-item">
      <h1>3</h1>
      <p>Financial Info</p>
    </div>
    <div class="progress-bar-item">
      <h1>4</h1>
      <p>Contact Info</p>
    </div>
  </div> <!-- progress bar row-->

  <div class="row">
    <h2 class="font-sans">What are you looking to buy?</h2>
    <%= link_to new_quick_path(house: true) do %>
      <div class="btn" style="margin-right: 10px">House</div>
    <% end %>
    <%= link_to new_quick_path(house: false) do %>
      <div class="btn" style="margin-left: 10px">Apartment or Condo</div>
    <% end %>
    <div class="buffer"></div>
  </div> <!-- row -->

</div> <!-- container -->
