<div class="container text-left bg-white">
  <div class="buffer"></div>
  <p class="text-right"><%= link_to 'New Pillar', new_pillar_path %></p>
  <h1 class="text-center" style="margin-bottom: 0px">Content Pillars</h1>
  <p class="text-center font-sans">Currently an admin-only page.  We'll see.</p>
      <% @pillars.each do |pillar| %>
        <h2 class="extreme-callout">
          <%= link_to pillar.name, pillar_path(pillar)%>
          <% if current_user && current_user.admin %>
            <%= link_to edit_pillar_path(pillar) do %><span class="glyphicon glyphicon-pencil"></span><% end %>
            <%= link_to pillar, method: :delete, data: { confirm: 'Are you sure you want to delete this pillar?' } do %><span class="glyphicon glyphicon-trash"></span><% end %>
          <% end %>
        </h2>
        <h3 style="margin-top: 0px"><%= pillar.snippet %></h3>
        <p style="margin-bottom: 20px">
            For <% if pillar.buyer && pillar.seller %>Buyers and Sellers<% elsif pillar.buyer%>Buyers<% elsif pillar.seller %>Sellers<% else %>General Information<% end %>
            (<% if pillar.active %>Active<% else %>Not Active<% end %> | <% if pillar.active %>On Main Nav<% else %>Not On Main Nav<% end %>)
        </p>

      <% end %>
      <div class="buffer"></div>

</div> <!-- container -->
