<div class="modal fade" id="newLoan<%= loan.id %>PaymentModal" tabindex="-1" role="dialog" aria-labelledby="newLoan<%= loan.id %>PaymentModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newLoan<%= loan.id %>PaymentModalLabel">Add a New Loan</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <%= render partial: "payments/modal_innards", locals: { loan: loan, payment: Payment.new } %>
    </div>
  </div>
</div>


<script>
$(document).ready(function() {
	$(".input-group-btn").addClass("hidden");
});
</script>
