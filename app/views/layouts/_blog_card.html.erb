<div class="col-sm-6 col-lg-4 py-4">
  <div class="card h-100">
    <div class="view overlay">
      <img class="card-img-top" src="<%= url_for(blog.image) %>" alt="<%= blog.title %>">
      <a><div class="mask rgba-white-slight"></div></a>
    </div> <!-- view overlay -->
    <div class="card-body">
      <h4 class="card-title"><%= blog.title %></h4>
      <hr>
      <p class="card-text"><%= blog.teaser %></p>
      <%= link_to blog_path(blog), class: "black-text d-flex justify-content-end", onclick: "ga('send',{'hitType': 'event','eventCategory': 'click', 'eventAction': 'Click Homepage Single Blog Link'})" do %><h5>Read more <i class="fas fa-angle-double-right"></i></h5><% end %>
    </div> <!-- card body -->
  </div> <!-- Card Light -->
</div> <!-- col -->
