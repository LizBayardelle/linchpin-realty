<!DOCTYPE html>
<html>
<head>
  <title>Linchpin Realty</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://fonts.googleapis.com/css?family=Poppins:400,800,900|Cinzel+Decorative:400,900|Playball|Playfair+Display:400,900" rel="stylesheet">
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery.matchHeight/0.7.0/jquery.matchHeight-min.js"></script>
  <meta name="p:domain_verify" content="51675027d07047c4ae82a98a4b64ae0b"/>
</head>

<body>


<div class="page-minus-footer">
  <%= image_tag "background.jpg", class: "bg" %>


  <!-- MENU GOES HERE -->
  <div id="main-nav" class="navbar navbar-default navbar-static-top" role="navigation">
      <div class="container-fluid">
          <div class="navbar-header">
          	<%= link_to root_path, class:"navbar-brand" do %><%= image_tag "logo_words_light.png", alt: "Linchpin Realty Logo" %><% end %>
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
              </button>
          </div>
          <div class="collapse navbar-collapse navbar-menubuilder">
              <ul class="nav navbar-nav navbar-right">
                  <li><%= link_to "Home", root_path, class: "center-ul-hover" %></li>
                  <li><%= link_to "Blog", blogs_path, class: "center-ul-hover", data: { turbolinks: false } %></li>
                  <li><%= link_to "Home Value", new_value_path, class: "center-ul-hover", data: { turbolinks: false } %></li>
                  <% if current_user && (current_user.admin || ( current_user.buyer && current_user.status_confirmed )) %>
                    <li><%= link_to "Listings", listings_path, class: "center-ul-hover" %></li>
                  <% end %>
                  <li><%= link_to "Contact Me", new_contact_path, class: "center-ul-hover" %></li>
                  <% if current_user %>
                  	<li><%= link_to "Dashboard", user_path(current_user), class: "center-ul-hover" %></li>
                  <% else %>
  	                <li><%= link_to "Create Account", new_user_registration_path, class: "center-ul-hover" %></li>
                  <% end %>
              </ul>
          </div>
      </div>
  </div>



  <!-- flash notice area -->
  <div class="flash-notice-area">
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash.now[:alert] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash.now[:alert] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div> <!-- flash notice area -->


  <%= yield %>
</div> <!-- page minus footer -->

<footer style="box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)">
  <div class="container text-center">
    <%= image_tag "logo_light.png", alt: "Linchpin Realty Logo", style: "width: 50%; max-width: 400px" %>
    <h2>Your guide to the California housing market.</h2>
    <div class="row social-row">
      <a href="mailto:anthony@linchpinrealty.com"><i class="icon ion-email"></i></a>
      <a href="https://www.facebook.com/LinchpinRealty" target="_blank"><i class="icon ion-social-facebook" target="_blank"></i></a>
      <a href="https://www.linkedin.com/in/anthonybayardelle/" target="_blank"><i class="icon ion-social-linkedin"></i></a>
      <a href="https://twitter.com/LinchpinRealty" target="_blank"><i class="icon ion-social-twitter"></i></a>
      <a href="https://plus.google.com/u/2/106755620722304807106" target="_blank"><i class="icon ion-social-googleplus"></i></a>
      <a href="https://www.youtube.com/channel/UCWgiHPtxXbwJbp7b_EX-QYg" target="_blank"><i class="icon ion-social-youtube"></i></a>
      <a href="https://www.pinterest.com/LinchpinRealtyCA/" target="_blank"><i class="icon ion-social-pinterest"></i></a>
    </div> <!-- social row -->
    <a href="https://www.zillow.com/reviews/write/?s=X1-ZU11qjqez6ipiq1_4zss5" target="_blank">
      <div class="btn btn-cta" style="margin-bottom: 35px">Review me on Zillow!</div>
    </a>
    <h4 style="color: white; position: relative z-index: 100">License #02018158</h4>
  </div> <!-- container -->
</footer>

<div class="row text-center" style="padding: 30px 0 30px 0; background-color: none">
  <div class="container">
    <div style="width: 90%; margin-left: 5%">
      <%= image_tag "logo_ocar.png", alt: "Orange County Association of Realtors", class: "footer-logo" %>
      <%= image_tag "rockstone_realty_logo.png", alt: "Rockstone Realty", class: "footer-logo" %>
      <%= image_tag "logo_pm_certificate.png", alt: "Property Management Certification", class: "footer-logo" %>
    </div>
  </div>
</div>

<div class="row transparent-white" style="position: relative; padding: 30px">
  <div class="container">
    <a href="http://www.linchpinindustries.com" target="_blank" style="text-decoration: none">
      <div class="text-center">
        <p style="margin-bottom: 0; font-weight: 200">Website by
        <%= image_tag "lpi_logo_rect.png", style: "height: 30px; width: auto; margin-left: 5px" %></p>
      </div> <!--lpi -->
    </a>
  </div>
</div>

