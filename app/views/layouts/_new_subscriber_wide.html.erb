<%= simple_form_for(@new_subscriber) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-group col-xs-6 col-lg-3">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, required: true, class: "form-control" %>
    </div> <!-- form group -->
    <div class="form-group col-xs-6 col-lg-3">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, required: true, class: "form-control" %>
    </div> <!-- form group -->
    <div class="form-group col-xs-6 col-lg-3">
      <%= f.label :phone %>
      <%= f.text_field :phone, class: "form-control" %>
    </div> <!-- form group -->
    <div class="form-group col-xs-6 col-lg-3">
      <%= f.label :email %>
      <%= f.text_field :email, required: true, class: "form-control" %>
    </div> <!-- form group -->
    <%= f.hidden_field :tag_string, value: tags %>
  </div>

  <div class="form-actions text-center">
    <%= f.submit "Let's Go", class: "btn" %>
  </div>
<% end %>
