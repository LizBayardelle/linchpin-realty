<%= simple_form_for(@new_subscriber) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs row">
    <%= f.invisible_captcha :subtitle %>

    <div class="col-sm-6 col-lg-3">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, required: true, class: "form-control" %>
    </div> <!-- col -->

    <div class="col-sm-6 col-lg-3">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, required: true, class: "form-control" %>
    </div> <!-- col -->

    <div class="col-sm-6 col-lg-3">
      <%= f.label :phone %>
      <%= f.text_field :phone, class: "form-control" %>
    </div> <!-- col -->

    <div class="col-sm-6 col-lg-3">
      <%= f.label :email %>
      <%= f.text_field :email, required: true, class: "form-control" %>
    </div> <!-- col -->

    <%= hidden_field_tag(:resource_id, @resource_id) %>
    <%= hidden_field_tag(:subscriber_sent, true) %>
    <%= f.hidden_field :tag_string, value: @tags %>
  </div>

  <div class="form-actions text-center mt-3">
    <%= f.button :submit, "Let's Go", class: "btn btn-primary" %>
  </div>
<% end %>
