<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs row text-left">
    <div class="form-group col-sm-6">
      <%= f.label :first_name %>
      <%= f.text_field :first_name , class: "form-control", oninput: "ga('send',{'hitType': 'event','eventCategory': 'typing', 'eventAction': 'Contact Typing First Name'})" %>
    </div> <!-- form group -->
    <div class="form-group col-sm-6">
      <%= f.label :last_name %>
      <%= f.text_field :last_name , class: "form-control" %>
    </div> <!-- form group -->

    <div class="form-group col-sm-6">
      <%= f.label "Phone Number" %>
      <%= f.text_field :phone , class: "form-control" %>
    </div> <!-- form group -->
    <div class="form-group col-sm-6">
      <%= f.label :email %>
      <%= f.text_field :email , class: "form-control" %>
    </div> <!-- form group -->

    <div class="form-group col-sm-6">
      <%= f.label "Preferred Contact Method" %>
      <%= f.input :preferred_contact , class: "form-control", collection: ["Phone", "Email"], label: false %>
    </div> <!-- form group -->
    <div class="form-group col-sm-6">
      <%= f.label "Buying or Selling" %>
      <%= f.input :purpose , class: "form-control", collection: ["Buying", "Selling"], label: false %>
    </div> <!-- form group -->

    <div class="form-group col-sm-12">
      <%= f.label :message %>
      <%= f.text_area :message, class: "form-control" %>
    </div> <!-- form group -->
  </div>

  <div class="form-actions row">
    <%= f.button :submit, "Send Message", onclick: "ga('send',{'hitType': 'event','eventCategory': 'submit', 'eventAction': 'Contact Us Submission'})" %>
  </div>
<% end %>
